generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

enum LotStatus {
  OPEN
  CLOSED
}

model Lot {
  id           String    @id // e.g. LOT-001
  title        String
  status       LotStatus @default(OPEN)
  basePrice    Int
  currentPrice Int
  endAt        DateTime?
  imageUrl     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
